<body class="mainStyle">

  <%- include('partials/header') %>

      <section class="administrador">
         <div>
            <h2 class="carteraCentrado">Panel de administraci√≥n</h2>
            <p class="alignTextPerfil"><a href="/producto/crear"><button type="button" class="btn btn-success colorButton">CREAR</button></a></p>
                    </div>
